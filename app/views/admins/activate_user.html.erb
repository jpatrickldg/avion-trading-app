<div class="w-full flex place-items-center justify-center">
  <div class="w-96">
    <%= form_with model: @user, url: admin_update_user_path, method: :patch,  local: true do |f| %>

      <div class="mb-2">
        <% if @user.errors.any? %>
          <ul>
            <% @user.errors.each do |error| %>
              <li><%= error.full_message %></li>
              <% end %>
          </ul>
        <% end %>
      </div>
      
      <h1 class ="mb-6 text-lg">Activate <span class="text-xl font-bold underline"><%= @user.email %></span>?</h1>
      <%= f.hidden_field :is_active, :value => true %>


      <div>
        <%= f.submit 'Activate User', class: 'w-full text-white focus:ring-4 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-blue-800 hover:cursor-pointer' %> 
      </div>
    <% end %>
  </div>
</div>