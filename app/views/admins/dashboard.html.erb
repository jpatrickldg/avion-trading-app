<% if current_user %>
  <h1 class="w-full text-xl font-bold text-white mb-4">Welcome, <%= current_user.first_name.upcase %></h1>
  <div>
    <h1 class="w-full text-center text-xl font-bold text-white mb-2">Users with Pending Activation</h1>
      <div class="overflow-x-auto relative shadow-md sm:rounded-lg mb-4">
        <% if @inactive_users.any? %>
          <table class="w-full text-sm text-left text-gray-400">
            <thead class="text-xs uppercase bg-gray-700 text-gray-400">
              <tr>
                <th class="py-3 px-6">Email</th>
                <th class="py-3 px-6 text-center">First Name</th>
                <th class="py-3 px-6 text-center">Last Name</th>
                <th class="py-3 px-6 text-center"><span class="sr-only">Edit</span></th>
                <th class="py-3 px-6 text-center"><span class="sr-only">Activate</span></th>
              </tr>
            </thead>
            <tbody>
              <% @inactive_users.each do |user| %>
                <tr class="border-b bg-gray-800 border-gray-700  hover:bg-gray-600">
                  <td class="py-3 px-6 font-medium whitespace-nowrap text-white"><%= user.email %></td>
                  <td class="py-4 px-6 text-center"><%= user.first_name %></td>
                  <td class="py-4 px-6 text-center"><%= user.last_name %></td>
                  <td class="py-4 px-6 text-center"><%= link_to "Edit User", admin_edit_user_path(user), class: 'font-medium text-blue-500 hover:underline' %></td>
                  <td class="py-4 px-6 text-center"><%= link_to "Activate User", admin_activate_user_path(user), class: 'font-medium text-blue-500 hover:underline' %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% else %>
          <p class="mb-4">No users with pending activation</p>
        <% end %>
      </div>
  </div>

  <div>
    <h1 class="w-full text-center text-xl font-bold text-white mb-2">Active Users</h1>
    <div class="overflow-x-auto relative shadow-md sm:rounded-lg mb-4">
      <% if @active_users.any? %>
        <table class="w-full text-sm text-left text-gray-400">
          <thead class="text-xs uppercase bg-gray-700 text-gray-400">
            <tr>
              <th class="py-3 px-6">Email</th>
              <th class="py-3 px-6 text-center">First Name</th>
              <th class="py-3 px-6 text-center">Last Name</th>
              <th class="py-3 px-6 text-center"><span class="sr-only">Edit</span></th>
              <th class="py-3 px-6 text-center"><span class="sr-only">View</span></th>
            </tr>
          </thead>
          <tbody>
            <% @active_users.each do |user| %>
              <tr class="border-b bg-gray-800 border-gray-700  hover:bg-gray-600">
                <td class="py-3 px-6 font-mediumwhitespace-nowrap text-white"><%= user.email %></td>
                <td class="py-4 px-6 text-center"><%= user.first_name %></td>
                <td class="py-4 px-6 text-center"><%= user.last_name %></td>
                <td class="py-4 px-6 text-center"><%= link_to "Edit User", admin_edit_user_path(user), class: 'font-medium text-blue-500 hover:underline'  %></td>
                <td class="py-4 px-6 text-center"><%= link_to "View User", admin_show_user_path(user), class: 'font-medium text-blue-500 hover:underline' %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p>No active users found</p>
      <% end %>
    </div>
  </div>
<% end %>