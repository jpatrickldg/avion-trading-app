<!DOCTYPE html>
<html>
  <head>
    <title>AvionTradingApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="px-8 bg-slate-900 text-white relative flex flex-col min-h-screen justify-between">
    
    <%= render 'shared/navbar' %>
    <div class="flex-none italic text-sm">
      <%= notice if notice %>
      <%= alert if alert %>
    </div>
    <div class="flex-auto">
      <%= yield %>
    </div>
    <%= render 'shared/footer' %>
  </body>
</html>
