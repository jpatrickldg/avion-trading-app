<% if current_user %>
  <h1>Welcome, <%= current_user.first_name.upcase %></h1>
  <%= link_to 'All Transactions', admin_transactions_path %>
  <h1>Users with Pending Activation</h1>
  <table>
    <thead>
      <tr>
        <th>Email</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Edit</th>
        <th>Activate</th>
      </tr>
    </thead>
    <tbody>
      <% @inactive_users.each do |user| %>
        <tr>
          <td><%= user.email %></td>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= link_to "Edit User", admin_edit_user_path(user) %></td>
          <td><%= link_to "Activate User", admin_activate_user_path(user) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <hr>
  <h1>Active Users</h1>
  <table>
    <thead>
      <tr>
        <th>Email</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Edit</th>
      </tr>
    </thead>
    <tbody>
      <% @active_users.each do |user| %>
        <tr>
          <td><%= user.email %></td>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= link_to "Edit User", admin_edit_user_path(user) %></td>
          <td><%= link_to "View User", admin_show_user_path(user) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <br>
  <%= button_to "New User", admin_new_user_path, method: :get %> <br>
  <hr>
  <%= button_to "Sign out", destroy_user_session_path, method: :delete %>
  
  
<% else %>
  <p>No account yet? <%= link_to "Sign up!", new_user_registration_path %></p>
  <p>Already have an account? <%= link_to "Login", new_user_session_path %></p>
<% end %>