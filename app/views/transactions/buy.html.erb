<h1>Transactions#buy</h1>
<p>Find me in app/views/transactions/buy.html.erb</p>

<h1>Buy Shares</h1>

<%= form_with model: [@stock, @transaction], url: create_buy_stock_transactions_path, local: true do |f| %>

  <%= f.hidden_field :transaction_type, :value => 'Buy' %>
  <%= f.hidden_field :is_active, :value => true %>
  <p>
    <% if @transaction.errors.any?  %>
      <ul>
        <% @transaction.errors..each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    <% end %>
  </p>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name, :value => params[:name]%>
  </p>

  <p>
    <%= f.label :symbol %><br />
    <%= f.text_field :symbol, :value => params[:symbol] %>
  </p>

  <p>
    <%= f.label :price %><br />
    <%= f.text_field :price, :value => params[:price], readonly: true %>
  </p>

  <p>
    <%= f.label :quantity %><br />
    <%= f.text_field :quantity %>
  </p>

 
    
  <p>
    <%= f.submit 'Buy' %>
  </p>
  
<% end %>

